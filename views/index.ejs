<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="index.css" />
    <title>Document</title>
  </head>
  <body>
    <h1>My Music Page</h1>
    <div class="wrap_button">
      <a class="buttonNew" href="/form">Tambah Lagu</a>
    </div>
    <div class="container">
      <div class="section">
        <h2>All Songs</h2>
        <ul class="songs-list">
          <% playlist.forEach(song => { %>
          <li class="song-item">
            <div class="song-info">
              <img src="<%=song.img %>" alt="gambar musik" />
              <h3><%=song.title %></h3>
              <p><%=song.artists %></p>
              <p>Telah diputar sebanyak <%= song.count %> kali</p>
              <button>Add to playlist</button>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
      <div class="section">
        <% playlist.sort((a, b) => b.count - a.count); %>
        <h2>Most Played Songs</h2>
        <ul class="songs-list">
          <% playlist.forEach(song => { %>
          <li class="song-item">
            <div class="song-info">
              <img src="<%=song.img %>" alt="gambar musik" />
              <h3><%=song.title %></h3>
              <p><%=song.artists %></p>
              <p>Telah diputar sebanyak <%= song.count %> kali</p>
              <button>Add to playlist</button>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>
